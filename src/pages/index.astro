			"@context": "https://schema.org",
			"@type": "ProfessionalService",
			"name": "Shamvita Software Studio",
			"description": "Partner estratégico de crecimiento digital. Diseñamos e implementamos sistemas escalables que generan ROI en menos de 90 días.",
			"url": "https://shamvita.com",
			"logo": "https://shamvita.com/logo.png",
			"serviceType": ["Software Development", "IT Consulting", "Digital Strategy"],
			"priceRange": "$$$"
